---
interface CTAProps {
  title: string;
  description: string;
  button: {
    text: string;
    url: string;
  };
}

interface Props {
  data: CTAProps;
}

const { data } = Astro.props;
---

<section class="py-20 bg-gradient-to-r from-blue-600 via-indigo-500 to-purple-600 text-white relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute inset-0 overflow-hidden opacity-30">
    <div class="absolute -top-10 -right-10 w-72 h-72 bg-yellow-300 rounded-full filter blur-3xl"></div>
    <div class="absolute -bottom-20 -left-10 w-80 h-80 bg-pink-400 rounded-full filter blur-3xl"></div>
    <div class="absolute top-1/3 left-1/3 w-40 h-40 bg-green-300 rounded-full filter blur-3xl"></div>
  </div>
  
  <!-- Floating shapes -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-10 left-[10%] w-12 h-12 bg-white opacity-10 rounded-lg rotate-12"></div>
    <div class="absolute top-1/3 right-[15%] w-16 h-16 bg-white opacity-10 rounded-full"></div>
    <div class="absolute bottom-20 left-[20%] w-20 h-20 bg-white opacity-10 rounded-lg -rotate-12"></div>
    <div class="absolute top-1/4 left-1/2 w-8 h-8 bg-white opacity-10 rounded-md rotate-45"></div>
  </div>
  
  <div class="container mx-auto text-center px-4 relative z-10 animate-fade-in">
    <div class="max-w-3xl mx-auto bg-white/10 backdrop-blur-sm p-10 rounded-2xl border border-white/20 shadow-xl">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6 text-white">
        {data.title}
      </h2>
      <p class="text-xl mb-8 text-white/90 max-w-3xl mx-auto">
        {data.description}
      </p>
      <a
        href={data.button.url}
        class="inline-block bg-white text-blue-700 px-8 py-4 rounded-xl font-semibold hover:bg-blue-50 transition-colors duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
      >
        {data.button.text}
      </a>
    </div>
  </div>
</section>
