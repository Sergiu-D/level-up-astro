---
interface ServiceItem {
  title: string;
  description: string;
  icon: string;
}

interface ServicesProps {
  title: string;
  description: string;
  items: ServiceItem[];
}

interface Props {
  data: ServicesProps;
}

const { data } = Astro.props;

// Define our age groups
const ageGroups = [
  {
    id: "children",
    title: "Pentru Copii",
    age: "7-11 ani",
    description: "Cursuri adaptate pentru cei mici, concentrate pe învățare prin joc și activități interactive, cu pregătire pentru examenele Cambridge Young Learners.",
    icon: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
    color: "orange",
    exams: ["Starters", "Movers", "Flyers"],
    image: "/images/children-course.jpg"
  },
  {
    id: "teenagers",
    title: "Pentru Adolescenți",
    age: "12-17 ani",
    description: "Cursuri concentrate pe dezvoltarea competențelor lingvistice esențiale pentru examenele Cambridge KET și PET, cu accent pe comunicare și gramatică practică.",
    icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z",
    color: "blue",
    exams: ["KET (A2)", "PET (B1)", "FCE (B2)"],
    image: "/images/teenagers-course.jpg"
  },
  {
    id: "adults",
    title: "Pentru Adulți",
    age: "18+ ani",
    description: "Cursuri avansate pentru adulți, cu pregătire intensivă pentru examenele Cambridge FCE, CAE și CPE, dezvoltând competențe lingvistice la nivel profesional.",
    icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
    color: "green",
    exams: ["FCE (B2)", "CAE (C1)", "CPE (C2)"],
    image: "/images/adults-course.jpg"
  }
];

// Cambridge certifications
const cambridgeCerts = [
  { name: "YLE", level: "Pre A1-A2", description: "Young Learners", color: "bg-yellow-500" },
  { name: "KET", level: "A2", description: "Key English Test", color: "bg-blue-500" },
  { name: "PET", level: "B1", description: "Preliminary English Test", color: "bg-indigo-500" },
  { name: "FCE", level: "B2", description: "First Certificate in English", color: "bg-purple-500" },
  { name: "CAE", level: "C1", description: "Certificate in Advanced English", color: "bg-pink-500" },
  { name: "CPE", level: "C2", description: "Certificate of Proficiency in English", color: "bg-red-500" }
];

// Helper function to get colors based on group
const getGroupColors = (color: string) => {
  switch(color) {
    case 'blue':
      return {
        bg: "bg-blue-50",
        accent: "bg-blue-600",
        text: "text-blue-600",
        gradient: "from-blue-50 to-indigo-50"
      };
    case 'purple':
      return {
        bg: "bg-purple-50",
        accent: "bg-purple-600",
        text: "text-purple-600",
        gradient: "from-purple-50 to-pink-50"
      };
    case 'green':
      return {
        bg: "bg-emerald-50",
        accent: "bg-emerald-600",
        text: "text-emerald-600",
        gradient: "from-emerald-50 to-teal-50"
      };
    default:
      return {
        bg: "bg-gray-50",
        accent: "bg-gray-600",
        text: "text-gray-600",
        gradient: "from-gray-50 to-gray-100"
      };
  }
};
---

<section class="py-16 md:py-24 bg-gradient-to-b from-gray-50 via-white to-gray-50 relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-blue-50 rounded-full opacity-50 transform translate-x-1/3 -translate-y-1/2"></div>
  <div class="absolute bottom-0 left-0 w-80 h-80 bg-purple-50 rounded-full opacity-40 transform -translate-x-1/3 translate-y-1/3"></div>
  
  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <span class="inline-block py-1 px-3 bg-indigo-50 text-indigo-700 rounded-full text-sm font-semibold mb-4">Metodologia Cambridge</span>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 font-heading bg-gradient-to-r from-primary-700 to-indigo-600 bg-clip-text text-transparent">{data.title}</h2>
      <p class="text-xl text-gray-600 mb-8">{data.description}</p>
      
      <!-- Cambridge Badge -->
      <div class="inline-flex items-center bg-white rounded-xl p-4 shadow-sm border border-gray-100">
        <div class="bg-indigo-50 p-3 rounded-full mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <div class="text-left">
          <h4 class="font-semibold text-lg">Centru Autorizat Cambridge</h4>
          <p class="text-gray-600 text-sm">Pregătim studenți pentru examene recunoscute internațional</p>
        </div>
      </div>
    </div>
    
    <!-- Cambridge Methodology Section (unified with certifications) -->
    <div class="py-12 bg-gradient-to-b from-blue-50 to-white relative">
      <!-- Decorative elements -->
      <div class="absolute top-0 left-0 w-32 h-32 bg-yellow-200 rounded-full opacity-20 -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute top-1/3 right-0 w-24 h-24 bg-blue-200 rounded-full opacity-20 translate-x-1/3"></div>
      
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <span class="px-4 py-1 bg-blue-50 text-blue-700 rounded-full text-sm font-medium inline-block mb-3">Cambridge Methodology</span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">De ce alegem metodologia Cambridge?</h2>
          <p class="text-lg text-gray-600">Cu o tradiție de peste 100 de ani, metodologia Cambridge oferă un cadru structurat pentru învățarea limbii engleze, recunoscut la nivel internațional.</p>
        </div>
        
        <!-- Combined Methodology Benefits and Certifications -->
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <!-- Left side: Benefits -->
          <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Beneficiile Metodologiei Cambridge</h3>
            
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="p-4 bg-blue-50 rounded-lg">
                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 mb-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                </div>
                <h4 class="font-medium text-gray-800 mb-2">Recunoaștere Internațională</h4>
                <p class="text-sm text-gray-600">Certificările Cambridge sunt recunoscute de universități și angajatori din întreaga lume.</p>
              </div>
              
              <div class="p-4 bg-indigo-50 rounded-lg">
                <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 mb-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <h4 class="font-medium text-gray-800 mb-2">Curriculum Structurat</h4>
                <p class="text-sm text-gray-600">Progresie naturală între niveluri, cu obiective clare și evaluare permanentă.</p>
              </div>
              
              <div class="p-4 bg-yellow-50 rounded-lg">
                <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center text-yellow-600 mb-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
                  </svg>
                </div>
                <h4 class="font-medium text-gray-800 mb-2">Competențe Echilibrate</h4>
                <p class="text-sm text-gray-600">Dezvoltare echilibrată a tuturor competențelor: citire, scriere, ascultare și vorbire.</p>
              </div>
              
              <div class="p-4 bg-green-50 rounded-lg">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center text-green-600 mb-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <h4 class="font-medium text-gray-800 mb-2">Pentru Toate Vârstele</h4>
                <p class="text-sm text-gray-600">Adaptabilă pentru toate categoriile de vârstă, de la copii la adulți.</p>
              </div>
            </div>
          </div>
          
          <!-- Right side: Cambridge Certifications -->
          <div class="bg-white rounded-xl shadow-md p-6 border border-gray-100">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Certificări Cambridge</h3>
            
            <div class="space-y-4">
              {cambridgeCerts.map((cert) => (
                <div class="flex items-center">
                  <div class={`w-16 h-4 ${cert.color} rounded-full mr-4`}></div>
                  <div>
                    <h4 class="font-medium text-gray-800">{cert.name} <span class="text-sm font-normal text-gray-500">({cert.level})</span></h4>
                    <p class="text-sm text-gray-600">{cert.description}</p>
                  </div>
                </div>
              ))}
            </div>
            
            <!-- Cambridge Badge -->
            <div class="mt-6 flex items-center justify-center">
              <div class="bg-white shadow-sm rounded-lg p-4 inline-flex items-center">
                <div class="w-14 h-14 bg-blue-50 rounded-full flex items-center justify-center mr-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                </div>
                <div>
                  <p class="font-bold text-gray-900">Cambridge English Assessment</p>
                  <p class="text-sm text-gray-600">Centru autorizat de pregătire și testare</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Age Group Segments -->
    <div class="space-y-16 md:space-y-24">
      {ageGroups.map((group, index) => {
        const colors = getGroupColors(group.color);
        return (
          <div class={`rounded-2xl bg-gradient-to-br ${colors.gradient} overflow-hidden`}>
            <div class={`grid md:grid-cols-2 gap-8 ${index % 2 === 1 ? 'md:grid-flow-col-reverse' : ''}`}>
              <!-- Content side -->
              <div class="p-8 md:p-12">
                <div class={`w-16 h-16 ${colors.bg} rounded-full mb-6 flex items-center justify-center`}>
                  <svg xmlns="http://www.w3.org/2000/svg" class={`h-8 w-8 ${colors.text}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={group.icon} />
                  </svg>
                </div>
                
                <div class="mb-6">
                  <span class={`inline-block py-1 px-3 ${colors.bg} ${colors.text} rounded-full text-sm font-medium mb-2`}>
                    {group.age}
                  </span>
                  <h3 class="text-2xl md:text-3xl font-bold text-gray-800 mb-4">{group.title}</h3>
                  <p class="text-gray-600 mb-6">{group.description}</p>
                </div>
                
                <!-- Features list -->
                <div class="space-y-4 mb-8">
                  <div class="flex items-center">
                    <div class={`w-10 h-10 ${colors.accent} rounded-full flex items-center justify-center mr-4 text-white`}>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-800">Comunicare interactivă</h4>
                      <p class="text-sm text-gray-600">Dezvoltarea abilităților de conversație și ascultare</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center">
                    <div class={`w-10 h-10 ${colors.accent} rounded-full flex items-center justify-center mr-4 text-white`}>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-800">Materiale Cambridge originale</h4>
                      <p class="text-sm text-gray-600">Acces la resurse educaționale de cea mai înaltă calitate</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center">
                    <div class={`w-10 h-10 ${colors.accent} rounded-full flex items-center justify-center mr-4 text-white`}>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-800">Pregătire specializată pentru examene</h4>
                      <p class="text-sm text-gray-600">Strategii și simulări pentru succes în examenele Cambridge</p>
                    </div>
                  </div>
                </div>
                
                <!-- Cambridge exams for this group -->
                <div class={`p-4 ${colors.bg} rounded-xl mb-8`}>
                  <h4 class="font-semibold text-gray-800 mb-2">Pregătim pentru examenele:</h4>
                  <div class="flex flex-wrap gap-2">
                    {group.exams.map(exam => (
                      <span class={`inline-block px-3 py-1 ${colors.accent} text-white text-sm rounded-full`}>
                        {exam}
                      </span>
                    ))}
                  </div>
                </div>
                
                <a href={`/courses/${group.id}`} class={`inline-flex items-center px-6 py-3 ${colors.accent} text-white rounded-lg shadow-md hover:shadow-lg transition-shadow`}>
                  Află mai multe
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
              
              <!-- Visual side -->
              <div class="h-64 md:h-auto relative overflow-hidden rounded-lg">
                <!-- Course Image with Fallback -->
                <img 
                  src={group.image} 
                  alt={group.title}
                  class="absolute inset-0 w-full h-full object-cover rounded-lg"
                  onerror="this.style.display='none'; this.parentElement.classList.add('fallback-bg');"
                />
                
                <!-- Fallback and overlay -->
                <div class={`absolute inset-0 bg-gradient-to-br ${colors.gradient} opacity-80 fallback-bg`}></div>
                
                <!-- Content overlay -->
                <div class="absolute inset-0 flex items-center justify-center p-8">
                  <div class="text-center">
                    <div class={`w-24 h-24 mx-auto ${colors.accent} rounded-full flex items-center justify-center text-white mb-4 shadow-lg`}>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={group.icon} />
                      </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800 mb-2">Grup {group.age}</h3>
                    <p class="text-gray-600">Cursuri adaptate pentru această categorie de vârstă</p>
                    
                    <!-- Cambridge levels -->
                    <div class="mt-6">
                      <div class="inline-block bg-white rounded-xl p-3 shadow-sm">
                        <div class="flex items-center">
                          <div class="bg-indigo-50 p-2 rounded-full mr-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                            </svg>
                          </div>
                          <div class="text-left">
                            <p class="text-sm font-semibold text-gray-800">Certificări Cambridge</p>
                            <p class="text-xs text-gray-600">{group.exams.join(" • ")}</p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Bottom badge overlay -->
                <div class="absolute bottom-0 right-0 left-0 p-4 bg-gradient-to-t from-gray-900 to-transparent">
                  <div class="flex flex-wrap gap-2 justify-center">
                    {group.exams.map(exam => (
                      <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm text-white font-medium">
                        {exam}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        )
      })}
    </div>
  </div>
</section> 