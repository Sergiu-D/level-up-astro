---
import { loadDataWithVariables } from "../utils/variables.js";

interface HeroProps {
  title: string;
  description: string;
  buttons: {
    text: string;
    url: string;
    primary: boolean;
  }[];
}

interface Props {
  data: HeroProps;
}

const { data } = Astro.props;
---

<section class="pt-16 pb-24 lg:py-24 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 z-0">
    <svg class="absolute top-0 left-0 w-full h-full" viewBox="0 0 1440 800" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path fill="url(#gradient1)" fill-opacity="0.2" d="M0,192L48,197.3C96,203,192,213,288,229.3C384,245,480,267,576,250.7C672,235,768,181,864,181.3C960,181,1056,235,1152,234.7C1248,235,1344,181,1392,154.7L1440,128L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
      <defs>
        <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" style="stop-color: rgb(59, 130, 246);"></stop>
          <stop offset="100%" style="stop-color: rgb(79, 70, 229);"></stop>
        </linearGradient>
      </defs>
    </svg>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between gap-12">
      <!-- Text Content -->
      <div class="md:w-1/2 md:pr-10">
        <div class="inline-block bg-blue-100 rounded-full px-4 py-2 text-blue-700 font-semibold text-sm mb-6 animate-bounce">
          Certificări Cambridge Recunoscute Internațional
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-heading mb-6 text-gray-900 leading-tight">
          Învață engleza cu <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">metodologia Cambridge</span>
        </h1>
        
        <p class="text-lg md:text-xl mb-8 text-gray-700 max-w-xl">
          Centrul nostru oferă cursuri de limba engleză bazate pe metodologia Cambridge, cu focus pe pregătirea pentru examene recunoscute internațional.
        </p>
        
        <div class="flex flex-wrap gap-4">
          {
            data.buttons.map((button) => (
              <a
                href={button.url}
                class={`inline-block px-8 py-4 font-semibold transition duration-300 rounded-lg text-lg ${
                  button.primary 
                    ? "bg-blue-700 text-white hover:bg-blue-600 shadow-lg hover:shadow-xl border-2 border-blue-700" 
                    : "bg-white text-blue-700 hover:bg-gray-100 border-2 border-blue-700 shadow-md"
                }`}
              >
                {button.text}
              </a>
            ))
          }
        </div>
        
        <!-- Cambridge Badges -->
        <div class="mt-12 flex flex-wrap gap-6 items-center">
          <div class="text-sm font-medium text-gray-500">Certificări disponibile:</div>
          <div class="flex flex-wrap gap-4">
            <div class="bg-white shadow-md rounded px-3 py-2 text-blue-800 font-semibold text-xs border border-gray-100">YLE</div>
            <div class="bg-white shadow-md rounded px-3 py-2 text-blue-800 font-semibold text-xs border border-gray-100">KET</div>
            <div class="bg-white shadow-md rounded px-3 py-2 text-blue-800 font-semibold text-xs border border-gray-100">PET</div>
            <div class="bg-white shadow-md rounded px-3 py-2 text-blue-800 font-semibold text-xs border border-gray-100">FCE</div>
            <div class="bg-white shadow-md rounded px-3 py-2 text-blue-800 font-semibold text-xs border border-gray-100">CAE</div>
            <div class="bg-white shadow-md rounded px-3 py-2 text-blue-800 font-semibold text-xs border border-gray-100">CPE</div>
          </div>
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="md:w-1/2 relative">
        <div class="relative z-10">
          <!-- Main Image Container -->
          <div class="relative bg-white rounded-2xl shadow-2xl p-3 transform rotate-1">
            <img 
              src="/images/hero-students.svg" 
              alt="Cambridge English Students" 
              class="h-full w-full object-cover rounded-xl"
            />
            
            <!-- Cambridge Logo Badge -->
            <div class="absolute -top-6 -right-6 bg-blue-700 text-white px-4 py-2 rounded-lg shadow-lg transform rotate-3">
              <span class="font-bold text-sm">Cambridge English</span>
            </div>
            
            <!-- Floating Elements -->
            <div class="absolute -left-8 -bottom-4 bg-yellow-400 w-16 h-16 rounded-full shadow-lg flex items-center justify-center transform -rotate-6">
              <span class="font-bold text-2xl text-white">A+</span>
            </div>
            
            <div class="absolute -right-10 top-1/3 bg-blue-100 rounded-lg p-3 shadow-md transform rotate-3">
              <div class="flex space-x-1">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <div class="w-2 h-2 bg-blue-600 rounded-full"></div>
                <div class="w-2 h-2 bg-blue-700 rounded-full"></div>
                <div class="w-2 h-2 bg-blue-800 rounded-full"></div>
              </div>
            </div>
          </div>
          
          <!-- Decorative Backgrounds -->
          <div class="absolute top-6 right-6 w-full h-full bg-indigo-200 rounded-2xl -z-10 transform rotate-3"></div>
          <div class="absolute top-12 right-12 w-full h-full bg-blue-100 rounded-2xl -z-20 transform rotate-6"></div>
        </div>
      </div>
    </div>
  </div>
</section>
