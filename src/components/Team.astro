---
interface TeamMember {
  name: string;
  position: string;
  description: string;
}

interface TeamProps {
  title: string;
  members: TeamMember[];
}

interface Props {
  data: TeamProps;
}

const { data } = Astro.props;
---

<section class="py-12 bg-gradient-to-b from-white to-primary-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-heading font-bold mb-8 text-center text-primary-800 animate-fade-in">{data.title}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 animate-slide-up">
      {data.members.map(member => (
        <div class="text-center bg-white p-6 rounded-xl shadow-card hover:shadow-lg transition-shadow duration-300">
          <div class="h-48 w-48 bg-gradient-to-r from-primary-200 to-secondary-200 rounded-full mx-auto mb-4 shadow-soft overflow-hidden"></div>
          <h3 class="text-xl font-heading font-semibold mb-1 text-primary-700">{member.name}</h3>
          <p class="text-primary-500 font-medium mb-2">{member.position}</p>
          <p class="text-gray-600">{member.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>